{% extends '::layout.html.twig' %}

{% block title -%}{{ parent() }}Voir Type{%- endblock %}

{% block container %}

    <div class="row">
        <div class="nine columns" id="main-title">
            <h1>{{ entity.username }}</h1>
        </div>
        <div class="three columns">
            <a href="{{ path('user_delete', { 'id': entity.id }) }}" class="button small radius alert">Delete</a>
            <a class="button small radius secondary" href="{{ path('user') }}">Retour</a>
        </div>
        <hr />
    </div>

    <div class="row">
        <table class="twelve">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ entity.email }}</td>
                </tr>
                <tr>
                    <th>Isactive</th>
                    <td>{{ entity.isActive }}</td>
                </tr>
                <tr>
                    <th>Isadmin</th>
                    <td>{{ entity.isAdmin }}</td>
                </tr>
            </tbody>
        </table>
    </div>

{% endblock container %}